<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Movie Management</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    .sidebar {
      height: 100%;
      position: fixed;
      top: 0;
      left: 0;
      width: 250px;
      background-color: #343a40;
      padding-top: 20px;
    }

    .sidebar a {
      color: white;
      padding: 10px 15px;
      text-decoration: none;
      display: block;
    }

    .sidebar a:hover {
      background-color: #575d63;
    }

    .main-content {
      margin-left: 260px;
      padding: 20px;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar position-fixed">
    <h3>Admin Panel</h3>
    <ul class="nav flex-column">
      <li class="nav-item">
        <a class="nav-link active" href="#">Dashboard</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Manage Movies</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Users</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Settings</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/add">Logout</a>
      </li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light">
      <a class="navbar-brand" href="#">Movie Management</a>
    </nav>

    <!-- Edit Movie Form -->
    <div class="container my-4">
      <h1>Edit Movie: <%= movie.title %></h1>
      <form action="/edit/<%= movie._id %>" method="POST" enctype="multipart/form-data">
        <!-- Movie Title -->
        <div class="mb-4">
          <label for="title" class="form-label">Movie Title</label>
          <input type="text" class="form-control" id="title" name="title" value="<%= movie.title %>" required>
        </div>

        <!-- Movie Description -->
        <div class="mb-4">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" name="description" rows="4" required><%= movie.description %></textarea>
        </div>

        <!-- Movie Image (Optional) -->
        <div class="mb-4">
          <label for="image" class="form-label">Image</label>
          <input type="file" class="form-control" id="image" name="image">
          <small class="form-text text-muted">Leave empty if you don't want to change the image.</small>
        </div>

        <!-- Save Changes Button -->
        <button type="submit" class="btn btn-primary" >Save Changes</button>
      </form>

      <!-- Delete Movie Button -->
      <form action="/delete/<%= movie._id %>" method="POST" style="margin-top: 20px;">
        <button type="submit" class="btn btn-danger">Delete Movie</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
